# Touchpad
# Identifier: 1739:30383:DLL075B:01_06CB:76AF_Touchpad
input type:touchpad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
	pointer_accel 0.33
}

