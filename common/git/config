[difftool]
	prompt = false

[alias]
	a = add
	A = add -A
	ac = commit -a
	b = rev-parse --symbolic-full-name HEAD
	c = commit
	cm = commit -m
	cnv = commit --no-verify
	co = checkout
	d = diff
	ds = diff --staged
	dt = difftool
	f = fetch
	l = log --pretty=format:'%h %ad%x09%an%x09%s' --date=short --decorate
	graph = log --graph --abbrev-commit --decorate --oneline --all
	ls = ls-files
	mm = merge master
	p = push
	pf = push --force-with-lease
	pl = pull
	rim = rebase -i master
	s = status
	sur = submodule update --remote

[merge]
	tool = nvimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[mergetool "nvimdiff"]
	cmd = nvimdiff $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'

