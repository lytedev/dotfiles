print_info() {
    info line_break

    prin "Shell" "bash"
    prin "WM" "bspwm"
    info "Term" term
    info "Font" font
    info "CPU" cpu
    info "GPU" gpu

    info line_break
    info cols
    info line_break

    # info "OS" distro
    # info "Kernel" kernel
    # info "Theme" theme
