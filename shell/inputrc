set editing-mode vi

# bindings
"\eOd": backward-word
"\eOc": forward-word
"\C-p": history-search-backward
"\C-n": history-search-forward
"\C-a": beginning-of-line
"\C-e": end-of-line
"\C-d": delete-char

"\e\C-p": " \C-e\C-u`__fzf_cd__`\n"
"\e\C-s": " \C-e\C-uscwd\n"
"\e\C-g": " \C-e\C-u. gcwd\n"

# vi settings
$if mode=vi
	set keymap vi-insert
	"jk": vi-movement-mode
	"Jk": vi-movement-mode
	"JK": vi-movement-mode
	"jj": vi-movement-mode
	"Jj": vi-movement-mode
	"JJ": vi-movement-mode
$endif
